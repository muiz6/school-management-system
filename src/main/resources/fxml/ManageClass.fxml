<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.project.schoolsystem.ui.ManageClassController">
   <children>
      <Pane prefHeight="100.0" prefWidth="509.0" style="-fx-background-color: #2D75E8;" />
      <HBox prefHeight="100.0" prefWidth="517.0" VBox.vgrow="ALWAYS">
         <children>
            <ListView prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" fx:id="listView" />
            <VBox prefHeight="200.0" prefWidth="150.0">
               <children>
                  <Button onAction="#onUpdate" fx:id="btnUpdate" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Update">

                     <graphic>
                        <FontAwesomeIconView fill="#2d75e8" glyphName="SYNC" size="50" />
                     </graphic>
                     <VBox.margin>
                        <Insets left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </Button>

                  <Button fx:id="btnAdd" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Add Class">
      
                     <graphic>
                        <FontAwesomeIconView fill="#2d75e8" glyphName="PLUS_CIRCLE" size="50" />
                     </graphic>
                     <VBox.margin>
                        <Insets left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </Button>

                  <Button fx:id="btnDelete" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Delete" VBox.vgrow="SOMETIMES">

                     <graphic>
                        <FontAwesomeIconView fill="#2d75e8" glyphName="TRASH_ALT" size="50" />
                     </graphic>
                     <VBox.margin>
                        <Insets left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</VBox>
